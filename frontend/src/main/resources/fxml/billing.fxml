<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cwk.ui.controllers.InvoiceController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="Invoice Management"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <!-- Invoice Table -->
            <TableView fx:id="invoiceTable" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colRecipient" text="Recipient" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="colTotal" text="Total Cost" prefWidth="100"/>
                    <TableColumn fx:id="colTax" text="Tax" prefWidth="100"/>
                    <TableColumn fx:id="colFinal" text="Final Cost" prefWidth="100"/>
                </columns>
            </TableView>

            <Separator />

            <!-- Add New Invoice Form -->
            <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT">
                <Label text="Recipient Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="recipientField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Contact No:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Product:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="productField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Quantity:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="quantityField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Unit Price:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="unitPriceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Tax %:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="taxField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Button text="Add Product" fx:id="addProductBtn"
                        onAction="#addProductToList" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <Label text="Products Added:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <ListView fx:id="productList" GridPane.rowIndex="9" GridPane.columnIndex="1" prefHeight="80"/>

                <Label text="Final Total (with tax):" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <Label fx:id="finalTotalLabel" text="â‚¹0.00"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                <Button text="Save Invoice" fx:id="saveInvoiceBtn"
                        onAction="#saveInvoice" GridPane.rowIndex="11" GridPane.columnIndex="1"
                        style="-fx-background-color: #2b9348; -fx-text-fill: white;"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
