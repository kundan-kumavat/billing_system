<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.cwk.ui.controllers.AddProductController">
    <children>
        <Label layoutX="20" layoutY="20" text="Add Product" />
        <TextField fx:id="nameField" layoutX="20" layoutY="50" promptText="Name"/>
        <TextField fx:id="categoryField" layoutX="20" layoutY="90" promptText="Category"/>
        <TextField fx:id="priceField" layoutX="20" layoutY="130" promptText="Price"/>
        <TextField fx:id="gstField" layoutX="20" layoutY="170" promptText="GST Rate"/>
        <TextField fx:id="stockField" layoutX="20" layoutY="210" promptText="Stock"/>
        <Button layoutX="20" layoutY="260" text="Save" onAction="#saveProduct"/>
        <Button layoutX="100" layoutY="260" text="Cancel" onAction="#cancel"/>
    </children>
</AnchorPane>
